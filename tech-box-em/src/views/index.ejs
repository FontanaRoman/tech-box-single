          </section>
          <i class="fa-solid fa-arrow-left arrow-left"></i>
          <div class="carrousel__products-slice">
            <% for (let i = 0; i < Math.min(3, productos.length); i++) { %>
              <div class="product">
                <!-- Puedes acceder a las propiedades del producto usando productos[i].propiedad -->
                <img src="/img/product/<%= productos[i].image %>" alt="" class="product__img" />
                <div class="product-detail">
                  <h4 class="product__title"><%= productos[i].name %></h4>
                  <div class="product__compra">
                    <p class="product__price">$<%= productos[i].price %></p>
                    <a href="/products/detail/<%= productos[i].id %>" class="product__buy">Comprar</a>
                  </div>
                </div>
              </div>
            <% } %>
            
          </div>
          <i class="fa-solid fa-arrow-right arrow-right"></i>
        </div>
        <!-- productos generales -->
        <article id="productGenerales">
          <% productos.slice(0, 5).forEach(producto => { %>
            <div class="bloques_index">
              <div class="img__products">
                <img src="/img/product/<%= producto.image %>" alt="" class="imagenes__producst">
              </div>
              <div class="linkinfo">
                <h3 class="product__title product__title-modify">
                  <%= producto.name %>
                </h3>
                <div class="product__info product__info-modify">
                  <p>
                    <%= producto.description %>
                  </p>
                </div>
                <a href="/products/detail/<%= producto.id %>" target="_blank">DETALLES</a>
              </div>
            </div>
          <% }) %>          
        </article>
